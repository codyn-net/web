# Global gravity, accessible from child nodes
g = 9.81

# Define a single node named n1
node "n1" {
    # Position of the point mass
    y = 20

    # Mass
    m = 0.6

    # External force, air friction
    f = "-dy"

    # Acceleration
    y'' = "-g + f / m"
}

